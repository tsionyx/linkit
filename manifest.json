{
  "manifest_version": 3,
  "name": "Link It",
  "description": "This extension makes every item in a page shareable. You can send the link to someone and he'll be able to open it at the same place.",
  "version": "0.1",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "background": {
    "scripts": ["bg.js"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": [
        "jquery-2.1.1.min.js",
        "jq_ext.js",
        "URI.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": [
        "linkit.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
    ]
}